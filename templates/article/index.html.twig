{% extends 'base.html.twig' %}

{% block title %}Liste d'article{% endblock %}

{% block body %}
	<!-- As a link -->
	<nav class="navbar navbar-light bg-light">
		<div class="container-fluid">
			<a class="navbar-brand" href="/home">Accueil</a>
			<a class="navbar-brand" href="/article">Liste des articles</a>
			<a class="navbar-brand" href="{{ path('article_new') }}">Créer un article</a>
			<a class="navbar-brand">{{ app.user.username }}</a>
			<a class="navbar-brand" href="{{ path('app_logout') }}">Déconnexion</a>
		</div>
	</nav>
	<!-- Card Boostrap -->
	{% for article in articles %}
		<div class="card m-3 d-inline-flex" style="width: 18rem;">
			<img src="{{ article.image }}" class="card-img-top img-fluid" alt="{{ article.image }}">
			<div class="card-body">
				<h5 class="card-title">{{ article.name }}</h5>
				<p class="card-text">{{ article.description }}</p>
				<a class="card-text text-decoration-none text-secondary" href="{{ path('article_show', {'id': article.id}) }}">Afficher le détail</a>
				<p class="blockquote-footer mt-2">Créé par : {{ article.author.username }}</p>
			</div>
		</div>
	{% endfor %}
{% endblock %}
